{
  // "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "tsconfig.json",
    "src/**/assets/iconfont/iconfont.js",
    "src/**/nporgress.js",
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "allowJs": true,
    // "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false, // 变量未使用不报错
    // "avoidEscape": true, // allows strings to use single-quotes or double-quotes 
    // "allowTemplateLiterals": true, // allows strings to use backticks
    "noImplicitThis": true, // 使用this不报错
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "element-plus/global",
      "webpack-env"
      // "webpack-env",
      // "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },

  // "references": [
  //   {
  //     "path": "./tsconfig.vite-config.json"
  //   }
  // ]
}